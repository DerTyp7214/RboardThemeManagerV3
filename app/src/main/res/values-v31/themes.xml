<resources>
    <!-- Base application theme. -->
    <style name="Theme.RboardThemeManagerV3" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

        <item name="fontFamily">@font/google_sans_text_400</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="floatingActionButtonStyle">?floatingActionButtonSecondaryStyle</item>
        <item name="popupMenuStyle">@style/PopupStyle</item>
        <item name="materialAlertDialogTheme">
            @style/Dialog.RboardThemeManagerV3.MaterialAlertDialog
        </item>
        <item name="materialSwitchStyle">@style/Widget.Material3.CompoundButton.MaterialSwitch</item>
        <item name="collapsingToolbarLayoutStyle">@style/Widget.CollapsingToolbar</item>

        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Widget.App.SnackbarTextView</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>

        <item name="android:windowSplashScreenBackground">?attr/colorSurface</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/dertyp_branding</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_animation</item>
        <item name="android:windowSplashScreenAnimationDuration">@integer/splashAnimationDuration</item>
    </style>

    <style name="Theme.RboardThemeManagerV3.Main" parent="Theme.RboardThemeManagerV3" />

    <style name="Theme.RboardThemeManagerV3.Info" parent="Theme.RboardThemeManagerV3">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RboardThemeManagerV3.ShareFlags" parent="Theme.RboardThemeManagerV3">
        <item name="android:statusBarColor">@color/color_primary_0_10_overlay</item>
    </style>

    <style name="Theme.RboardThemeManagerV3.InstallPack" parent="Theme.RboardThemeManagerV3">
        <item name="android:statusBarColor">@color/color_primary_0_10_overlay</item>
    </style>

    <style name="Theme.RboardThemeManagerV3.TextAppearanceHeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/google_sans_text_500</item>
    </style>

    <style name="Theme.RboardThemeManagerV3.TextAppearanceHeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/google_sans_text_400</item>
    </style>
</resources>